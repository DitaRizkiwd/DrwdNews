<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/iconnya"
        android:label="@string/app_name"
        android:roundIcon="@drawable/iconnya"
        android:supportsRtl="true"
        android:theme="@style/Theme.DrwdNews"
        tools:targetApi="31">
        <activity
            android:name=".presentation.home_screen.view.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.science_screen.view.ScienceActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.bussiness_screen.view.BussinessActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.entertainment_screen.view.EntertainmentActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.splash_screen.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>